@{
    Layout = "_Layout";
}

@model Pierre.Models.Treat

<h2>Add a flavor to @Html.DisplayFor(model => model.Name)</h2>

<div id="stuff">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.TreatId)

        @Html.Label("Select Flavor")
        <br>
        <br>
        @Html.DropDownList("FlavorId")
        <br>
        <br>
        <input type="Submit" value="Save" class="btn btn-primary" />
    }
</div>
<br>
<br>
<div class="links">
    <h2>@Html.ActionLink("Back to Treats", "Index")</h2>
</div>