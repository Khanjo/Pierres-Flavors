@{
    Layout = "_Layout";
}

@model Pierre.Models.Treat

<h2>Edit @Html.DisplayFor(model => model.Name)</h2>

<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600; font-size: 22px;" })</p>

<div id="stuff">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.TreatId)

        @Html.LabelFor(model => model.Name)
        <br>
        <br>
        @Html.EditorFor(model => model.Name)
        <br>
        <br>
        <br>
        @Html.LabelFor(model => model.Description)
        <br>
        <br>
        @Html.EditorFor(model => model.Description)
        <br>
        <br>
        <br>
        <input type="Submit" value="Save" class="btn btn-primary" />
    }
</div>
<br>
<br>
<div class="links">
    <h3>@Html.ActionLink("Back to Treats", "Index")</h3>
    <h3>@Html.ActionLink("Home", "Index", "Home")</h3>
</div>